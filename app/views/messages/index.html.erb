<h1>Listing messages</h1>

<table>
  <tr>
    <th>User</th>
    <th>Msg</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @messages.each do |message| %>
  <tr>
    <td><%= message.user_id %></td>
    <td><%= message.msg %></td>
    <td><%= link_to 'Show', user_chat_message_path(@user.id, @chat.id, message) %></td>
    <td><%= link_to 'Edit', edit_user_chat_message_path(@user.id, @chat.id, message) %></td>
    <td><%= link_to 'Destroy', [@user, @chat, message], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

