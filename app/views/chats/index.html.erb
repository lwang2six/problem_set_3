<h1>List of your on going chats</h1>
<% if @chats.count > 0 %>
<p>
<table>
  <tr>
    <th>Chats</th>
    <th></th>
    <th></th>
  </tr>

<% @chats.each do |chat| %>
  <tr>
    <td><%= link_to "#{chat.time}", chat_path(chat) %></td>
    <td>
      with 
        <% chat.users.each do |u| %>
          <% if u != current_user %><%= u.email %><% end %>
        <% end %>  
    </td>
    <td><%= link_to 'Delete', chat, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
</p>
<br/>
<% end %>
<p>
  <% if @users.count > 1 %>
    <h3>Select users to chat with</h3>
    <ul>
      <% @users.each do |user| %>
        <li><%= link_to "#{user.email}", new_chat_path(:id => user.id)%></li>
      <% end %>
    </ul>
  <% else %>
   <h3>Sorry you dont have anyone to chat with but yourself!!! =[</h3>
  <% end %>
  <br />
</p>
<%= link_to 'New Chat', new_chat_path %>
